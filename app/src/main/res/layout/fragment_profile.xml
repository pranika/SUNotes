<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g5"
    tools:context="com.example.kupal.sunotes.OtherUtilties.profile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/test2"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rel1">
                    <TextView
                        android:id="@+id/movieName"
                        android:layout_alignParentLeft="true"
                        android:textSize="15dp"
                        android:typeface="sans"
                        android:layout_marginLeft="140dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        />


                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="130dp"
                        style="?android:attr/ratingBarStyleSmall"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:layout_below="@+id/movieName"/>

                    <!--style="?android:attr/ratingBarStyleSmall"-->
                    <TextView
                        android:id="@+id/textRating"
                        android:typeface="sans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ratingBar"
                        android:layout_below="@id/movieName"/>

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:id="@+id/imgView3"
                        android:background="@drawable/profilepic"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="30dp"
                        android:layout_below="@+id/ratingBar"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="0dp" />
                    <TextView
                        android:id="@+id/director"
                        android:text="Cast :"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_toRightOf="@id/imgView3"/>
                    <TextView
                        android:id="@+id/stars"
                        android:typeface="sans"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:width="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        android:textSize="12dp"
                        android:layout_below="@id/director"
                        android:layout_toRightOf="@id/imgView3"/>
                    <TextView
                        android:id="@+id/cast"
                        android:text="Directed by :"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imgView3"
                        android:layout_below="@id/stars"
                        android:layout_marginTop="30dp" />
                    <TextView
                        android:id="@+id/directorName"
                        android:typeface="sans"
                        android:ellipsize="none"
                        android:scrollHorizontally="false"
                        android:width="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        android:textSize="10dp"
                        android:layout_below="@id/cast"
                        android:layout_toRightOf="@id/imgView3"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_alignTop="@+id/imgView3"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/desc"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300sp"
                    android:layout_height="50sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20sp">
                </LinearLayout>

                <ImageView
                    android:id="@+id/test"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    />

                <SeekBar
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/Seekbar1"/>

            </LinearLayout>
        </RelativeLayout>

    </FrameLayout>